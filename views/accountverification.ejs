<% include ./partials/header %>
<div class="container">

    <div class="row text-center">
        <h1>verification of account</h1>
        <div style="text-align: center; margin: 0 auto; padding-top:35px;">
            <form action="/accountverification" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" name="email" style="height: 40px;width: 100%;" autofocus class="form-control"
                        value="<%= email %>" required>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-large btn-block" value="verification of account">
                </div>
            </form>
        </div>
    </div>
</div>
<% include ./partials/footer %>