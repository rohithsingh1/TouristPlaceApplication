<% include ../partials/header %>
<div class="container">
    <div class="row text-center">
        <h1>Add Image to <%= campground.name %></h1>
        <div style="text-align: center; width: 0 auto; padding-top: 35px;">
            <form action="/campgrounds/<%= campground._id %>/Addimage" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="image"  placeholder="https://source.unsplash.com/TCCCKgdFmBo" style="height: 40px;width: 100%;">
                </div>
                   <h3 class="text-center"> or</h3>
                <div class="form-group">
                            <input type="file" class="form-control" accept="image/*" name="photo">
                </div>
                <div class="form-group">
                    <button class="btn btn-sm btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a class = "btn btn-primary btn-large" href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

    
<% include ../partials/footer %>

