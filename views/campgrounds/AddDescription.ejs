<% include ../partials/header %>

<div class = "container" >
  
        <div class = "row text-center" >
         <h1>  "<%= campground.name %>"</h1>
       <div  style = " text-align: center; margin: 0 auto; padding-top:35px;" >
               <form   action = "/campgrounds/<%=campground._id%>/AddDescription" method = "POST" >
                  <div class = "form-group" >
                         <input type = "text" class = "form-control" style = "height:40px; width:100%;" name = "name" value = "<%= campground.name %>" required>
                   </div>
                   <div class = "form-group" >
                        <input type = "text" class = "form-control" style = "height:40px; width:100%;" name = "location" value = "<%= campground.location %>" required>
                  </div>
                   <div class = "form-group" >
                         <input type = "text" class = "form-control" style = "height:40px; width:100%;" name = "cost" placeholder = " campground cost" required>
                   </div>
                   <div class = "form-group">
                           <textarea class = "form-control" rows = "5" cols = "30" name = "description" placeholder="campground description...." required></textarea>
                    </div>
                    <div class = "form-group" >
                     <button class = "btn btn-primary btn-large btn-block" >Update</button>
                    </div>
               </form>
                  <a class = "btn btn-success btn-large " href = "/campgrounds">HOME</a>     
       </div>   

        </div>

   
</div>





<% include ../partials/footer %>
